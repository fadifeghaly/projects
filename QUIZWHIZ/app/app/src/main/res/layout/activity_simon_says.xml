<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/simonbg"
    android:orientation="vertical"
    tools:context=".SimonSays">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Reproduisez le jeu de lumiÃ¨re"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="20dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/green"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="bottom"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/greenoff" />

        <Button
            android:id="@+id/red"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/redoff" />

        <Button
            android:id="@+id/yellow"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/yellowoff" />

        <Button
            android:id="@+id/blue"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/blueoff" />

    </GridLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="20dp"
        android:layout_marginTop="130dp"
        android:text="Score : 0"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />

</LinearLayout>