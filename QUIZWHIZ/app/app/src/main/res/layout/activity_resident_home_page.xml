<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gbg"
    android:orientation="vertical"
    tools:context=".ResidentHomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/profil_img_id"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:background="@android:color/transparent"
                android:padding="5dp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Bonjour "
                android:textSize="40sp" />

            <TextView
                android:id="@+id/profil_nom_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="!"
                android:textSize="40sp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/qc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:text="Vos quiz"
            android:textSize="25sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/jeux"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="85dp"
        android:layout_marginStart="35dp"
        android:layout_gravity="bottom"
        android:src="@drawable/zonejeux" />

    <Button
        android:id="@+id/zonejeux"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/roundshape1"
        android:backgroundTint="#1C5B59"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="ZONE JEUX"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

</LinearLayout>


